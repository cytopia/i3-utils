#!/bin/sh -eu

###
### System variables
###
MY_NAME="$( basename "${0}" )"
MY_LOG_DIR="${HOME}/.log"
MY_LOG_FILE="${MY_LOG_DIR}/${MY_NAME}.err"
MY_DATE="$( date '+%Y-%m-%d' )"
MY_TIME="$( date '+%H:%M:%S' )"



################################################################################
##
##  F U N C T I O N S
##
################################################################################
error() {
	printf "%s\n" "${1}" >&2
	printf "[%s] [%s] %s\n" "${MY_DATE}" "${MY_TIME}" "${1}" >> "${MY_LOG_FILE}"
}



################################################################################
##
##  E N T R Y   P O I N T
##
################################################################################

if [ ! -d "${MY_LOG_DIR}" ]; then
	mkdir -p "${MY_LOG_DIR}"
fi
if [ ! -f "${MY_LOG_FILE}" ]; then
	touch "${MY_LOG_FILE}"
fi
if [ ! -w "${MY_LOG_FILE}" ]; then
	chmod u+w "${MY_LOG_FILE}"
fi

if command -v systemctl >/dev/null 2>&1; then
	_ret=0
	_err="$( systemctl reboot 2>&1)" || _ret=$?
	if [ "${_ret}" != "0" ]; then
		error "'systemctl reboot' did exit with non-zero: ${_ret}"
		error "${_err}"
		exit 1
	fi
elif command -v dbus-send >/dev/null 2>&1; then
	_ret=0
	_err="$( dbus-send --system --print-reply \
			--dest='org.freedesktop.login1' \
			/org/freedesktop/login1 \
			org.freedesktop.login1.Manager.Reboot boolean:true 2>&1 )" || _ret=$?
	if [ "${_ret}" != "0" ]; then
		error "'dbus-send' to reboot did exit with non-zero: ${_ret}"
		error "${_err}"
		exit 1
	fi
else
	error "You either need 'systemctl' or 'dbus-send'. None are available."
	exit 1
fi
